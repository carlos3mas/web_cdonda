// Esquema de base de datos para Campus CD Onda

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inscripcion {
  id                     String   @id @default(cuid())
  tipoInscripcion        String   @default("campus-navidad") // campus-navidad, campus-verano, anual, etc.
  nombreJugador          String
  apellidos              String
  fechaNacimiento        DateTime
  dni                    String
  nombreTutor            String
  telefono1              String
  telefono2              String?
  enfermedad             String?
  medicacion             String?
  alergico               String?
  numeroSeguridadSocial  String?
  pagada                 Boolean  @default(false)
  justificantePago       String?  // Ruta al archivo del justificante
  nombreArchivoJustificante String?  // Nombre original del archivo
  firma                  String?
  nombreArchivoFirma     String?
  derechosImagen         Boolean  @default(false) // Autorización para usar imágenes en redes sociales
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@map("inscripciones")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  nombre    String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model PlantillaPDF {
  id              String   @id @default(cuid())
  tipoInscripcion String   @unique // campus-navidad, campus-verano, anual
  nombreArchivo   String
  rutaArchivo     String
  activa          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("plantillas_pdf")
}

